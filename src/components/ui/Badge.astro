---
import { Icon } from "astro-icon/components";

const { icon, label } = Astro.props;
---

<div
  class="flex text-black items-center gap-1 w-fit rounded-md px-2 py-0.5 shadow-[0_0_0_2px] shadow-primary-400 dark:text-white dark:shadow-primary-400 bg-primary-300 dark:bg-primary-600"
>
  {
    icon && (
      <div class="flex items-center w-4 h-4">
        <Icon name={icon} />
      </div>
    )
  }
  <div>
    <span class="text-sm">{label}</span>
  </div>
</div>
